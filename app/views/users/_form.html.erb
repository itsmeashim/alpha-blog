
<div class="container">
    <%= render 'shared/errors', obj: @user %>
    <div class="row justify-content-center">
       <div>
        <div class="col-10">
            <%= form_with(model: @user, class: "shadow-sm p-3 mb-5 bg-white rounded", local: true) do |f| %>
                <div class="form-group row mt-4">
                    <%= f.label "Username", class: "col-2 col-form-label fw-bold " %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your Username" %>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label fw-bold" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your Email" %>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label fw-bold" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a Secure Password" %>
                    </div>
                </div>

                <div class="form-group text-center m-2">
                    <%= f.submit class:"btn btn-success btn-lg" %>
                </div>
            <% end %>
        </div>

        <%= link_to "<- Back to Articles Page", articles_path, type: "button", class: "btn btn-primary mt-3 mb-2" %>
       </div>
    </div>
</div>