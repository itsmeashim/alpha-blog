<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? %>
    <% if @user == current_user || current_user.admin?  %>
        <div class="mt-2 text-center">
            <%= link_to "Update Profile", edit_user_path(@user), class: "btn btn-primary btn-lg" %>
        </div>
        <% if current_user.admin? %>
            <div class="mt-2 text-center">
                <%= link_to "Delete Profile", user_path(@user), class: "btn btn-danger btn-lg", method: :delete, data: { confirm: "Are you sure? "} %>
            </div>
        <% end %>
    <% end %>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<div class="container">
    <%= render 'articles/article' %>

    <div class="flickr_pagination m-3">
        <%= will_paginate @articles, :container => false %>
    </div>
</div>