<%= form_with(model: @category, class: "shadow-sm p-3 mb-5 bg-white rounded", local: true) do |f| %>
    <div class="form-group row mt-4">
        <%= f.label "Category", class: "col-2 col-form-label fw-bold " %>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter Category" %>
        </div>
    </div>


    <div class="form-group text-center m-2">
        <%= f.submit class:"btn btn-success btn-lg" %>
    </div>
<% end %>