<h1>Edit the Artikle</h1>

<% if @article.errors.any? %>
<h2> The following errors prevented the save action. </h2>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
    <p>
        <%= f.label "Put the damn fucking title" %> <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>