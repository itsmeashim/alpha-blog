
<div class="container">
    <%= render 'shared/errors', obj: @article %>
    <div class="row justify-content-center">
       <div>
        <div class="col-10">
            <%= form_with(model: @article, class: "shadow-sm p-3 mb-5 bg-white rounded", local: true) do |f| %>
                <div class="form-group row mt-4">
                    <%= f.label "Article Title", class: "col-2 col-form-label fw-bold " %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <%= f.label :description, class: "col-2 col-form-label fw-bold" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description" %>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <%= f.label :description, class: "col-2 col-form-label fw-bold" %>
                    <div class="col-10">
                        <%= f.collection_select(:category_ids, Category.order(:name), :id, :name, { prompt:  "Select Category If any. ( Optional and Can be Multiple) "}, { multiple: true, size: 3, class: "form-select shadow rounded"})  %>
                    </div>
                </div>

                <div class="form-group text-center m-2">
                    <%= f.submit class:"btn btn-success btn-lg" %>
                </div>
            <% end %>
        </div>

        <%= link_to "<- Back to Articles Page", articles_path, type: "button", class: "btn btn-primary mt-3 mb-2" %>
       </div>
    </div>
</div>