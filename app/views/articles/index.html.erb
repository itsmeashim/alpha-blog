<h1 class="text-center mt-2">Article Listing Page</h1>

<div class="container mt-4">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>

        <tbody><% @articles.each do |article| %>
            <tr>
                <td><%= link_to article.title, article_path(article), class: "text-success fw-bold" %></td>
                <td><%= truncate(article.description, length: 20) %></td>
                <td><%= link_to 'Show', article_path(article), class: "btn btn-success", type: "button" %></td>
                <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning", type: "button" %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "You sure nigga?" }, class: "btn btn-danger", type: "button" %></td>
            </tr>
        </tbody><% end %>
    </table>

    <%= link_to 'New', new_article_path, type: "button", class: "btn btn-primary mt-3" %>
</div>
