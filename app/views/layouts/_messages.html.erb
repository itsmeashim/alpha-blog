<% if flash.any? %>
    <div class="container">
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <ul class="list-unstyled">
                <% flash.each do |name, msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% end %>